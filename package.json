{
  "private": true,
  "name": "greenlight",
  "description": "Greenlight is a streaming application for Xbox and xCloud",
  "version": "2.0.0-beta6",
  "author": "UnknownSKL <info+github@jimkroon.nl>",
  "main": "app/background.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unknownskl/xbox-xcloud-client.git"
  },
  "scripts": {
    "dev": "yarn run build-deps && nextron",
    "build": "yarn run build-deps && nextron build",
    "flatpak-build": "yarn run build-deps && nextron build --no-pack && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "publish": "electron-builder -p onTag",
    "storybook": "start-storybook -p 6006 -s ./renderer/public",
    "build-storybook": "build-storybook",
    "build-deps": "cd xal-node && npm ci",
    "flatpak-deps": "python3 /data/deps/flatpak-builder-tools/cargo/flatpak-cargo-generator.py ./xal-node/Cargo.lock -o flatpak/cargo-sources.json && python3 /data/deps/flatpak-builder-tools/cargo/flatpak-cargo-generator.py ./flatpak/cargo.xal-rs.lock -o flatpak/cargo-xal-sources.json && flatpak-node-generator yarn yarn.lock -o flatpak/yarn-sources.json && flatpak-node-generator npm xal-node/package-lock.json -o flatpak/npm-sources.json",
    "flatpak": "flatpak-builder build flatpak/dev.unknownskl.greenlight.yml --install --force-clean --user"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "compare-versions": "^5.0.3",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.0.1",
    "github-url-to-object": "^4.0.6",
    "xbox-webapi": "^1.4.1",
    "xbox-xcloud-player": "0.2.0-beta7"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.28",
    "babel-loader": "^9.1.2",
    "electron": "21",
    "electron-builder": "^23.6.0",
    "next": "^13.2.4",
    "nextron": "^8.5.0",
    "node-loader": "^2.0.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "typescript": "^4.9.5"
  }
}
